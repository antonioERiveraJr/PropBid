<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrounddesign2"
    tools:context=".ADMIN.ADMIN">

    <RelativeLayout
        android:id="@+id/parent_relative"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/arrowback_message"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="ADMIN"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/parent_relative">

        <!-- Buyer Button with Counter -->
        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp">

            <!-- Original Button -->
            <Button
                android:id="@+id/workerButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textviewbackground"
                android:text="Buyer"
                android:textSize="10sp" />

            <!-- Overlaying Button (Badge) -->
            <Button
                android:id="@+id/workerCounter"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_gravity="right|center"
                android:padding="0sp"
                android:layout_marginEnd="0dp"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:visibility="visible" />

        </FrameLayout>

        <!-- Seller Button with Counter -->
        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp">

            <!-- Original Button -->
            <Button
                android:id="@+id/clientButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textviewbackground"
                android:text="Seller"
                android:textSize="10sp" />

            <!-- Overlaying Button (Badge) -->
            <Button
                android:id="@+id/clientCounter"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_gravity="right|center"
                android:padding="0sp"
                android:layout_marginEnd="0dp"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:visibility="visible" />

        </FrameLayout>

        <!-- Request Button with Counter -->
        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp">

            <!-- Original Button -->
            <Button
                android:id="@+id/requestButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textviewbackground"
                android:text="Request"
                android:textSize="10sp" />

            <!-- Overlaying Button (Badge) -->
            <Button
                android:id="@+id/requestCounter"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_gravity="right|center"
                android:padding="0sp"
                android:layout_marginEnd="0dp"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:visibility="visible" />

        </FrameLayout>
        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp">
            <Button
                android:id="@+id/messageButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:background="@drawable/textviewbackground"
                android:text="Report"
                android:textSize="10sp" />

            <Button
                android:id="@+id/reportCounter"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_gravity="right|center"
                android:padding="0sp"
                android:layout_marginEnd="0dp"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:visibility="visible" />
        </FrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>