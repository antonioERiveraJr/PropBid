<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrounddesign2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/popupbg"
        android:backgroundTint="@color/light"
        android:orientation="vertical"
        android:padding="15dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/beforeImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@+id/beforetxt"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:clickable="true"
                android:onClick="openFileDialog"
                android:src="@drawable/addproductimageicon" />

            <ImageView
                android:id="@+id/afterImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@+id/aftertxt"
                android:layout_alignParentRight="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:clickable="true"
                android:onClick="openFileDialog2"
                android:src="@drawable/addproductimageicon" />

            <TextView
                android:id="@+id/beforetxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="60dp"
                android:text="Before"
                android:textColor="#FFF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/aftertxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="60dp"
                android:text="After"
                android:textColor="#FFF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Gotit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/btnbg"
                android:padding="10dp"
                android:text="Done"
                android:textColor="@color/white" />

        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>
