<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrounddesign2"
    tools:context=".ViewYourProductDetails">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_settingsAddProduct"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/light">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_settingsSellersForgot"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/light">
            <ImageButton
                android:id="@+id/arrowback_View"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
                android:background="@color/light"
                app:tint="@color/white" />

        </androidx.appcompat.widget.Toolbar>




    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:id="@+id/scroller"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/app_bar_settingsAddProduct">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <HorizontalScrollView
                android:id="@+id/imageScroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="49dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="-1dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/select_product_image"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_margin="5dp"
                        android:cropToPadding="false"
                        android:scaleType="centerCrop"
                        android:src="@drawable/addproductimageicon" />

                    <ImageView
                        android:id="@+id/select_product_image2"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_margin="5dp"
                        android:cropToPadding="false"
                        android:scaleType="centerCrop"
                        android:src="@drawable/addproductimageicon"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/select_product_image3"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_margin="5dp"
                        android:cropToPadding="false"
                        android:scaleType="centerCrop"
                        android:src="@drawable/addproductimageicon"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/select_product_image4"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_margin="5dp"
                        android:cropToPadding="false"
                        android:scaleType="centerCrop"
                        android:src="@drawable/addproductimageicon"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/select_product_image5"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_margin="5dp"
                        android:cropToPadding="false"
                        android:scaleType="centerCrop"
                        android:src="@drawable/addproductimageicon"
                        android:visibility="gone" />

                </LinearLayout>

            </HorizontalScrollView>

            <com.google.android.material.textfield.TextInputLayout

                android:id="@+id/product_name_Viewdetails2"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/imageScroll"
                android:layout_marginTop="10dp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:hint="Request Name"
                android:layout_gravity="center"
                app:boxBackgroundColor="@color/white">
            <EditText
                android:id="@+id/product_name_Viewdetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/productImageDetailslayout"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/textviewbackground"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:hint="Request Name"
                android:focusableInTouchMode="false"
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:text="Request Name"
                android:textColor="@color/text_color"
                android:textSize="18sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:id="@+id/product_price_Viewdetails2"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/product_name_Viewdetails2"
                android:layout_marginTop="10dp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:hint="Request Price"
                android:layout_gravity="center"
                app:boxBackgroundColor="@color/white">
            <EditText
                android:id="@+id/product_price_Viewdetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_name_Viewdetails2"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/textviewbackground"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="number"
                android:padding="20dp"
                android:text="Request Price"
                android:textColor="@color/text_color" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout

                android:id="@+id/product_description_Viewdetails2"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/product_price_Viewdetails2"
                android:layout_marginTop="10dp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:hint="Request Details"
                android:layout_gravity="center"
                app:boxBackgroundColor="@color/white">
            <EditText
                android:id="@+id/product_description_Viewdetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_price_Viewdetails2"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="9dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/textviewbackground"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:text="Request Details"
                android:textColor="@color/text_color" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout

                android:id="@+id/product_location_Viewdetails2"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/product_description_Viewdetails2"
                android:layout_marginTop="10dp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:hint="Request Location"
                android:layout_gravity="center"
                app:boxBackgroundColor="@color/white">
            <EditText
                android:id="@+id/product_location_Viewdetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_description_Viewdetails2"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/textviewbackground"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:text="Request Location"
                android:textColor="@color/text_color" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout

                android:id="@+id/sellers_phoneNumber_Viewdetails2"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/product_location_Viewdetails2"
                android:layout_marginTop="10dp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:hint="Phone Number"
                android:layout_gravity="center"
                app:boxBackgroundColor="@color/white">
            <EditText
                android:id="@+id/sellers_phoneNumber_Viewdetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_description_Viewdetails2"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/textviewbackground"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="number"
                android:padding="20dp"
                android:text="Phone Number"
                android:textColor="@color/text_color" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout

                android:id="@+id/sellers_posted_Viewdate2"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/sellers_phoneNumber_Viewdetails2"
                android:layout_marginTop="10dp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:hint="Request Posted"
                android:layout_gravity="center"
                app:boxBackgroundColor="@color/white">
            <EditText
                android:id="@+id/sellers_posted_Viewdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sellers_phoneNumber_Viewdetails2"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/textviewbackground"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:text="Request Posted"
                android:textColor="@color/text_color" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout

                android:id="@+id/sellers_to_be_done2"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/sellers_posted_Viewdate2"
                android:layout_marginTop="10dp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:hint="Working day"
                android:layout_gravity="center"
                app:boxBackgroundColor="@color/white"/>
            <TextView
                android:id="@+id/txtworker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buyer"
                android:layout_centerHorizontal="true"
                android:textColor="@color/text_color"
                android:visibility="gone"
                android:layout_below="@id/sellers_to_be_done2"/>

            <TextView
                android:id="@+id/chosenWorker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtworker"
                android:layout_marginLeft="45dp"
                android:contextClickable="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_marginRight="45dp"
                android:layout_marginBottom="50dp"
                android:visibility="gone"
                android:background="@drawable/textviewbackground"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:text="Working day"
                android:textColor="@color/text_color"

                />


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sellers_to_be_done2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20dp"
                android:text="Bidders"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_background"
                android:textSize="15sp"
                android:textStyle="bold" />



            <FrameLayout
                android:id="@+id/frame1"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_below="@id/chosenWorker"
                android:layout_alignParentEnd="true"
                android:visibility="gone"
                android:layout_alignParentStart="true"
                android:layout_marginTop="0dp" >



                <Button
                    android:id="@+id/workIsDone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MARK AS DONE"
                    android:layout_gravity="center"
                    android:visibility="gone"/>



            </FrameLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/listofWorkers"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/textView"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                app:reverseLayout="true"/>


            <RelativeLayout
                android:id="@+id/completed"
                android:layout_width="match_parent"
                android:layout_below="@id/chosenWorker"
                android:visibility="gone"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="10dp"
                android:layout_height="250dp">

                <TextView
                    android:id="@+id/trasactiontxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/text_color"
                    android:layout_alignParentTop="true"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="TRANSACTION"/>
                <TextView
                    android:id="@+id/txtbefore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BEFORE"
                    android:textColor="@color/text_color"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="70dp"
                    android:layout_below="@+id/trasactiontxt"
                    android:layout_alignParentLeft="true"
                    android:textSize="12dp"/>
                <TextView
                    android:id="@+id/txtafter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AFTER"
                    android:textColor="@color/text_color"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:layout_marginEnd="70dp"
                    android:layout_below="@+id/trasactiontxt"
                    android:layout_alignParentRight="true"
                    android:textSize="12dp"/>

                <ImageView
                    android:id="@+id/before"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_below="@+id/txtbefore"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/addproductimageicon" />

                <ImageView
                    android:id="@+id/after"
                    android:layout_width="150dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/txtafter"
                    android:layout_height="150dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/addproductimageicon" />

                <TextView
                    android:id="@+id/totalPrice"
                    android:layout_width="wrap_content"
                    android:text="PRICE"
                    android:textColor="@color/text_color"
                    android:textSize="15dp"
                    android:layout_below="@id/before"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="0dp"
                    android:layout_height="wrap_content"/>



            </RelativeLayout>
        </RelativeLayout>


    </ScrollView>

</RelativeLayout>