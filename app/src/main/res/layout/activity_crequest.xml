<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@drawable/backgrounddesign2"
        android:layout_height="match_parent"
        tools:context=".CRequest">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_settingsAddProduct"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/light">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_settingsSellersForgot"
                android:layout_width="match_parent"
                android:background="@color/light"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@color/light"
                    android:layout_height="match_parent">


                    <ImageButton
                        android:id="@+id/arrowback_SellersAddNewProduct"
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:background="@color/light"
                        android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
                        app:tint="@color/white" />

                </RelativeLayout>

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/app_bar_settingsAddProduct">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <com.google.android.gms.maps.MapView
                    android:id="@+id/mapView"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_below="@+id/add_new_product"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="45dp"
                    android:padding="20dp"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/text_color"
                    app:liteMode="true"
                    android:layout_marginBottom="20dp"/>

                <HorizontalScrollView
                    android:id="@+id/imageScroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="49dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="-1dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/select_product_image"
                            android:layout_width="match_parent"
                            android:layout_gravity="center"
                            android:layout_height="200dp"
                            android:src="@drawable/addproductimageicon" />

                        <ImageView
                            android:id="@+id/select_product_image2"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_margin="5dp"
                            android:cropToPadding="false"
                            android:scaleType="centerCrop"
                            android:src="@drawable/addproductimageicon"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/select_product_image3"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_margin="5dp"
                            android:cropToPadding="false"
                            android:scaleType="centerCrop"
                            android:src="@drawable/addproductimageicon"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/select_product_image4"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_margin="5dp"
                            android:cropToPadding="false"
                            android:scaleType="centerCrop"
                            android:src="@drawable/addproductimageicon"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/select_product_image5"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_margin="5dp"
                            android:cropToPadding="false"
                            android:scaleType="centerCrop"
                            android:src="@drawable/addproductimageicon"
                            android:visibility="gone" />

                    </LinearLayout>

                </HorizontalScrollView>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/categoryInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="321dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageScroll"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/input_background2"
                    android:hint="Property Type"
                    android:textColorHint="@color/text_color">

                    <AutoCompleteTextView
                        android:id="@+id/itemCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_background2"
                        android:clickable="false"
                        android:drawablePadding="10dp"
                        android:editable="false"
                        android:focusable="false"
                        android:textColor="@color/text_color" />

                </com.google.android.material.textfield.TextInputLayout>

                <EditText
                    android:id="@+id/product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/categoryInputLayout"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="45dp"
                    android:background="@drawable/input_background2"
                    android:hint="Title"
                    android:textColorHint="@color/text_color"
                    android:inputType="textMultiLine"
                    android:textColor="@color/text_color"
                    android:padding="20dp" />

                <EditText
                    android:id="@+id/product_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/product_name"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="45dp"
                    android:background="@drawable/input_background2"
                    android:hint="Lot Size (sqm)"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/text_color"
                    android:inputType="textMultiLine"
                    android:padding="20dp" />


                <EditText
                    android:id="@+id/product_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/product_description"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/text_color"
                    android:layout_marginRight="45dp"
                    android:background="@drawable/input_background2"
                    android:hint="Price"
                    android:textColorHint="@color/text_color"
                    android:inputType="number"
                    android:maxLength="4"
                    android:padding="20dp" >


                </EditText>


                <EditText
                    android:id="@+id/product_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/product_price"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="45dp"
                    android:background="@drawable/input_background2"
                    android:hint="Location"
                    android:inputType="textMultiLine"
                    android:textSize="15dp"
                    android:padding="20dp"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/text_color" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/moreDetailsInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/product_location"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="45dp"
                    android:hint="More Details"
                    app:boxBackgroundColor="@color/white"
                    android:textColorHint="@color/text_color">

                    <EditText
                        android:id="@+id/more_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_background2"
                        android:inputType="textMultiLine"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/text_color" />

                </com.google.android.material.textfield.TextInputLayout>



                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputlayout2"
                    android:layout_below="@+id/moreDetailsInputLayout"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_centerHorizontal="true"
                    app:boxBackgroundColor="@color/white"
                    android:textColorHint="@color/text_color"
                    android:hint="Listers Phone Number:">

                    <EditText
                        android:id="@+id/sellers_phoneNumber"
                        android:editable="false"
                        android:focusable="false"
                        android:clickable="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_baseline_phonenumber_24"
                        android:background="@drawable/input_background2"
                        android:drawablePadding="10dp"
                        android:text="Phone Number"
                        android:textColor="@color/text_color" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputlayout"
                    android:layout_below="@id/inputlayout2"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_centerHorizontal="true"
                    app:boxBackgroundColor="@color/white"
                    android:textColorHint="@color/text_color"
                    android:hint="Listed By:">

                    <EditText
                        android:id="@+id/add_shop_name"
                        android:editable="false"
                        android:focusable="false"
                        android:clickable="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_baseline_person_24"
                        android:background="@drawable/input_background2"
                        android:drawablePadding="10dp"
                        android:text="Requester Name"
                        android:textColor="@color/text_color" />

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/add_new_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/inputlayout"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="45dp"
                    android:layout_marginBottom="20dp"
                    android:padding="17dp"
                    android:background="@drawable/button_background"
                    android:text="Add"
                    android:textColor="@android:color/white"
                    android:textSize="15sp" />

            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>