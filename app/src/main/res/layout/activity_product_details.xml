<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/backgrounddesign2"
    android:layout_height="match_parent"
    android:paddingBottom="50dp"
    tools:context=".ProductDetails">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_settingsAddProduct"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/light">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_settingsSellersForgot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/arrowback_ProductDetails"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:background="@color/light"
                    android:src="@drawable/ic_baseline_arrow_back_ios_new_24" />

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/app_bar_settingsAddProduct">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <HorizontalScrollView
                android:id="@+id/imageScroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="49dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="-1dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/select_product_image"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_margin="5dp"
                        android:cropToPadding="false"
                        android:scaleType="centerCrop"
                        android:src="@drawable/addproductimageicon" />

                    <ImageView
                        android:id="@+id/select_product_image2"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_margin="5dp"
                        android:cropToPadding="false"
                        android:layout_marginEnd="10dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/addproductimageicon"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/select_product_image3"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_margin="5dp"
                        android:cropToPadding="false"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/addproductimageicon"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/select_product_image4"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_marginEnd="10dp"
                        android:layout_margin="5dp"
                        android:cropToPadding="false"
                        android:scaleType="centerCrop"
                        android:src="@drawable/addproductimageicon"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/select_product_image5"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_margin="5dp"
                        android:cropToPadding="false"
                        android:layout_marginEnd="10dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/addproductimageicon"
                        android:visibility="gone" />

                </LinearLayout>

            </HorizontalScrollView>


            <EditText
                android:id="@+id/product_name_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageScroll"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/textviewbackground"
                android:textColor="@color/text_color"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:text="Product Name"
                android:textSize="18sp" />

            <EditText
                android:clickable="false"
                android:cursorVisible="false"
                android:background="@drawable/textviewbackground"
                android:textColor="@color/text_color"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:id="@+id/product_price_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_name_details"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="45dp"
                android:text="Product Price"
                android:inputType="textMultiLine"
                android:padding="20dp" />

            <EditText
                android:clickable="false"
                android:cursorVisible="false"
                android:background="@drawable/textviewbackground"
                android:textColor="@color/text_color"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:id="@+id/product_description_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_price_details"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="45dp"
                android:text="No Other Details"
                android:inputType="textMultiLine"
                android:padding="20dp" />

            <EditText
                android:clickable="false"
                android:cursorVisible="false"
                android:background="@drawable/textviewbackground"
                android:textColor="@color/text_color"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_description_details"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="45dp"
                android:text="Product Details"
                android:inputType="textMultiLine"
                android:padding="20dp" />
            <EditText
                android:clickable="false"
                android:cursorVisible="false"
                android:background="@drawable/textviewbackground"
                android:textColor="@color/text_color"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:id="@+id/product_location_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/details"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="45dp"
                android:text="Product Location"
                android:inputType="textMultiLine"
                android:padding="20dp" />

            <EditText
                android:id="@+id/sellers_phoneNumber_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textviewbackground"
                android:textColor="@color/text_color"
                android:layout_below="@+id/product_location_details"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="45dp"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:text="Phone Number" />

            <EditText
                android:id="@+id/sellers_posted_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textviewbackground"
                android:textColor="@color/text_color"
                android:layout_below="@+id/sellers_phoneNumber_details"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="45dp"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:text="Date Posted" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputlayout2"
                android:layout_below="@+id/sellers_posted_date"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/textviewbackground"

                app:boxBackgroundColor="@color/text_background"
                android:textColorHint="@color/text_color"
                android:hint="Listed By">

                <EditText
                    android:id="@+id/ListerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_background2"
                    android:clickable="true"
                    android:drawableStart="@drawable/ic_baseline_email_24"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/button_background_green"
                    android:editable="false"
                    android:focusable="false"
                    android:text="Full Name"
                    android:textColor="@color/text_color" />

            </com.google.android.material.textfield.TextInputLayout>
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barChart"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/inputlayout2"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:visibility="visible"
                android:layout_marginBottom="10dp" />


            <EditText
                android:id="@+id/bidPrice"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_below="@+id/applicantsRecyclerView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:padding="20dp"
                android:background="@drawable/textviewbackground"
                android:hint="bid price"
                android:inputType="numberDecimal" />



            <Button
                android:id="@+id/message_seller_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bidPrice"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_background"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:text="BID"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/applicantsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/barChart"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:visibility="visible"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp" />
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>