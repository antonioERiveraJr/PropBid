<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrounddesign2"
    tools:context=".workerLogActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="bottom|end"
            android:layout_margin="20dp"
            android:visibility="gone"
            android:src="@drawable/ic_baseline_download_24"
            />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listofLog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/randd"
            android:layout_alignParentBottom="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/randd"
            tools:layout_editor_absoluteX="8dp" />

        <RelativeLayout
            android:id="@+id/randd"
            android:layout_height="70dp"
            android:layout_width="match_parent"
            >

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_baseline_arrow_back_ios_new_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:id="@+id/logtxt"
                android:text="Log activity"
                android:textColor="@color/text_color"
                />
            <TextView
                android:id="@+id/Date"
                android:layout_below="@+id/logtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Date"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                tools:layout_editor_absoluteX="58dp"
                tools:layout_editor_absoluteY="25dp" />

            <TextView
                android:id="@+id/Action"
                android:layout_width="wrap_content"
                android:textColor="@color/text_color"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/logtxt"
                android:layout_height="wrap_content"
                android:layout_marginEnd="50dp"
                android:gravity="right"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"
                android:text="Action"
                tools:layout_editor_absoluteX="58dp"
                tools:layout_editor_absoluteY="25dp" />
        </RelativeLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>