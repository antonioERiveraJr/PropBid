        android:id="@+id/switchUsers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sellerloginButton"
        android:layout_alignStart="@id/sellerpasslayout"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/trade_winds"
        android:text="Switch to Workers"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />-->


    <Button
        android:id="@+id/sellerloginButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/sellerpasslayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="112dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="99dp"
        android:background="@drawable/button_background"
        android:text="LOGIN"
        android:textStyle="bold"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/sellerCreateAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sellerloginButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="87dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="71dp"
        android:gravity="center"
        android:text="Create an account"
        android:textColor="@color/clickable_text"
        android:textSize="15sp"  />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/logo3" />


