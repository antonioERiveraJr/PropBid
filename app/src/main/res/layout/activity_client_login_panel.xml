<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrounddesign2"
    tools:context=".ClientLogin">

    <!--gravity of the Switch-->

    <ImageButton
        android:id="@+id/arrowback_message"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#B2D7EC"
        android:background="@color/background"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/lgnTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:text="Login as Seller"
        android:textColor="@color/text_background"
        android:textSize="35dp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/sellerLayout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_centerHorizontal="true"
        android:hint="Email Address"
        app:boxStrokeWidth="2dp"
        app:endIconMode="clear_text"
        android:textColorHint="#FFF"
        app:hintTextColor="@color/button_background_green"
        app:boxStrokeColor="@color/white"
        app:startIconDrawable="@drawable/ic_baseline_email_24"
        android:background="@drawable/textviewbackground"
        app:boxBackgroundColor="@android:color/transparent"
        android:layout_below="@id/lgnTextView">

        <EditText
            android:id="@+id/seller_email"
            android:textColor="#FFF"
            android:layout_width="match_parent"
            android:background="@drawable/textviewbackground"
            android:layout_height="match_parent"
            android:inputType="textEmailAddress"/>

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/sellerpasslayout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_centerHorizontal="true"
        android:hint="Password"
        android:textColorHint="#FFF"
        app:boxStrokeWidth="2dp"
        app:hintTextColor="@color/button_background_green"
        app:boxStrokeColor="@color/white"
        app:startIconDrawable="@drawable/ic_baseline_securitypassword_24"
        app:boxBackgroundColor="@android:color/transparent"
        app:passwordToggleEnabled="true"
        android:background="@drawable/textviewbackground"
        android:layout_below="@id/sellerLayout">

        <EditText
            android:id="@+id/seller_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/textviewbackground"
            android:inputType="textPassword"
            android:textColor="#FFF" />

    </com.google.android.material.textfield.TextInputLayout>

